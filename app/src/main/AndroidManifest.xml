<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bushbungalo.weatherlion"
    tools:ignore="GoogleAppIndexingWarning">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>

    <application
        android:name=".WeatherLionApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AquaTheme">

        <activity
            android:name=".WeatherLionMain"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PrefsActivity"
            android:label="@string/app_settings"
            android:parentActivityName=".WeatherLionMain"
            android:screenOrientation="portrait">

            <!-- Older versions of android -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WeatherLionMain" />
        </activity>

        <activity
            android:name=".AboutActivity"
            android:label="@string/app_about"
            android:parentActivityName=".WeatherLionMain"
            android:screenOrientation="portrait">

            <!-- Older versions of android -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".WeatherLionMain" />
        </activity>

        <receiver android:name=".AlarmBroadcastReceiver"
            android:exported="false">

            <intent-filter>
                <action android:name=".alarms.ACTION_ALARM" />
            </intent-filter>
        </receiver>

        <receiver android:name=".BootCompleteReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver android:name=".LargeWeatherWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/large_weather_widget_info" />
        </receiver>

        <receiver android:name=".SmallWeatherWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/small_weather_widget_info" />
        </receiver>

        <service
            android:name=".services.CityDataService"
            android:exported="false" />

        <service
            android:name=".services.CityStorageService"
            android:exported="false" />

        <service
            android:name=".services.GeoLocationService"
            android:exported="false" />

        <service
            android:name=".services.IconUpdateService"
            android:exported="false" />

        <service
            android:name=".services.LocationTrackerService"
            android:exported="false" />

        <service
            android:name=".services.WeatherDataXMLService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service
            android:name=".services.WidgetUpdateService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />

    </application>
</manifest>