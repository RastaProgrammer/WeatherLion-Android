<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Weather application theme. -->
    <style name="AquaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aqua</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#448AFF</item>
    </style>

    <!-- Weather application theme. -->
    <style name="FrostyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/frosty</item>
        <item name="colorPrimaryDark">#E46B1B</item>
        <item name="colorAccent">#FD9425</item>
    </style>

    <style name="RabalacTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rabalac</item>
        <item name="colorPrimaryDark">#36503D</item>
        <item name="colorAccent">#72AF75</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="LionTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lion</item>
        <item name="colorPrimaryDark">#292929</item>
        <item name="colorAccent">#515558</item>
    </style>

    <style name="WeatherLionMenuTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@android:color/holo_red_light</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MainActivityPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-0.5dip</item>
        <item name="android:dropDownVerticalOffset">1dip</item>
    </style>

    <style name="AquaTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HintTextStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="WeatherTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="WeatherTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AquaTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AquaTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
