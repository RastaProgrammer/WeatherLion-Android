<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/black</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimary">@color/color_white</item>
        <item name="android:color">@color/color_white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:actionBarStyle">@color/black</item>
    </style>

<!-- Weather application theme. -->
    <style name="AquaThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aqua</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#448AFF</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="navigationIcon">@drawable/wl_back_16</item>
    </style>

    <style name="AquaThemeDark" parent="AppThemeDark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#448AFF</item>
        <item name="android:textColorSecondary">#2277AA</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="navigationIcon">@drawable/wl_back_aqua</item>
    </style>

    <!-- Weather application theme. -->
    <style name="FrostyThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/frosty</item>
        <item name="colorPrimaryDark">#E46B1B</item>
        <item name="colorAccent">#FD9425</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="navigationIcon">@drawable/wl_back_16</item>
    </style>

    <style name="FrostyThemeDark" parent="AppThemeDark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#E46B1B</item>
        <item name="colorAccent">#FD9425</item>
        <item name="android:textColorSecondary">#FCBC6E</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="navigationIcon">@drawable/wl_back_frosty</item>
    </style>

    <style name="RabalacThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rabalac</item>
        <item name="colorPrimaryDark">#36503D</item>
        <item name="colorAccent">#72AF75</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="navigationIcon">@drawable/wl_back_16</item>
    </style>

    <style name="RabalacThemeDark" parent="AppThemeDark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#36503D</item>
        <item name="colorAccent">#72AF75</item>
        <item name="android:textColorSecondary">#04E177</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="navigationIcon">@drawable/wl_back_rabalac</item>
    </style>

    <style name="LionThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lion</item>
        <item name="colorPrimaryDark">#292929</item>
        <item name="colorAccent">#515558</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="navigationIcon">@drawable/wl_back_16</item>
    </style>

    <style name="LionThemeDark" parent="AppThemeDark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">#292929</item>
        <item name="colorAccent">#515558</item>
        <item name="android:textColorSecondary">#EFF0F1</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="navigationIcon">@drawable/wl_back_16</item>
    </style>

    <style name="WeatherLionMenuTheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@android:color/holo_red_light</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MainActivityPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-0.5dip</item>
        <item name="android:dropDownVerticalOffset">1dip</item>
    </style>

    <style name="AquaThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppCompat.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="ZoomAnimation">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
    </style>
</resources>
