<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    android:layout_weight="1"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/labelLayout"
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.61"
        android:layout_marginStart="4.0dip">

        <TextView
            android:id="@+id/txWindLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#515151"
            android:ellipsize="end"
            android:layout_marginTop="2dip"
            android:minHeight="20dip"
            android:text="@string/notif_wind"
            android:singleLine="true"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/txvHumidityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#515151"
            android:ellipsize="end"
            android:minHeight="20dip"
            android:text="@string/notif_humidity"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dataLayout"
        android:gravity="end"
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="0.39"
        android:layout_marginStart="4dip">

        <TextView
            android:id="@+id/notification_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#515151"
            android:ellipsize="end"
            android:layout_marginTop="2dip"
            android:minHeight="20dip"
            android:fontFamily="sans_serif"
            android:text="@string/default_wind"
            android:singleLine="true"
            android:includeFontPadding="false" />

        <TextView
            android:id="@+id/notification_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="#515151"
            android:ellipsize="end"
            android:minHeight="20dip"
            android:text="@string/default_humidity"
            android:singleLine="true" />
    </LinearLayout>
</LinearLayout>