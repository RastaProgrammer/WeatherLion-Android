<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlDialogBody"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imvStrollingLion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/lion_animation"
        android:src="@drawable/wl_loading" />

    <TextView
        android:id="@+id/txvLoadingData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvStrollingLion"
        android:text="@string/refreshing_widget"
        android:layout_marginTop="8dip"
        android:gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:textSize="16sp" />
</RelativeLayout>


