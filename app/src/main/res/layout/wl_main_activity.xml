<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/weather_main_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="main_screen"
        android:background="@drawable/wb_clear_day">

    <RelativeLayout
            android:id="@+id/main_window"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#99313435">

            <RelativeLayout
                android:id="@+id/rlWeatherLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wl_bottom_shadow_border">

                <TextView
                    android:id="@+id/txvCurrentWeatherLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_city"
                    android:gravity="start"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dip"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/imvShowList"
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dip"
                    android:layout_toEndOf="@+id/txvCurrentWeatherLocation"
                    android:contentDescription="@string/current_reading_icon"
                    android:src="@drawable/wl_previous_search_drop_down"
                    tools:visibility="invisible" />

                <ImageButton
                    android:id="@+id/imbShowMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="showMainMenuPopup"
                    android:layout_margin="10dp"
                    android:background="@drawable/wl_menu_selector"
                    android:contentDescription="@string/popup_menu_launcher" />
            </RelativeLayout>

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swlRefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/rlWeatherLocation"
                android:layout_above="@+id/rlWeatherFooter">

                <RelativeLayout
                    android:id="@+id/rlRefreshChildren"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rlToday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dip"
                        android:layout_marginBottom="7dip">

                        <RelativeLayout
                            android:id="@+id/rlLocalTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/txvLocalTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-condensed"
                                android:text="@string/local_time"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                            <TextClock
                                android:id="@+id/tcLocalTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dip"
                                android:layout_marginEnd="4dip"
                                android:layout_toEndOf="@+id/txvLocalTime"
                                android:format12Hour="h:mm a"
                                android:textColor="#F39530"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txvTimezone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/tcLocalTime"
                                android:fontFamily="sans-serif-condensed"
                                android:text="@string/default_timezone"
                                android:textColor="#F39530"
                                android:textSize="14sp"
                                android:textStyle="normal" />

                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/imvCurrentCondition"
                            android:layout_width="120dip"
                            android:layout_height="120dip"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dip"
                            android:layout_marginEnd="10dip"
                            android:contentDescription="@string/current_reading_icon"
                            android:src="@drawable/clear" />

                        <TextView
                            android:id="@+id/txvHighTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dip"
                            android:layout_toEndOf="@+id/txvCurrentTemperature"
                            android:gravity="center"
                            android:text="@string/no_reading_u"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txvLowTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txvHighTemp"
                            android:layout_toEndOf="@+id/txvCurrentTemperature"
                            android:text="@string/no_reading_u"
                            android:textColor="#CBCBCB"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txvCurrentTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dip"
                            android:layout_marginEnd="16dip"
                            android:layout_marginBottom="20dip"
                            android:layout_toEndOf="@+id/imvCurrentCondition"
                            android:text="@string/no_reading_u"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#FFFFFF"
                            android:textSize="50sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/txvWindReading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/windMill"
                            android:layout_alignBottom="@id/windMill"
                            android:layout_marginStart="38dip"
                            android:padding="0dip"
                            android:text="@string/default_wind"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txvClimateConditions"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txvCurrentTemperature"
                            android:layout_alignStart="@+id/txvCurrentTemperature"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="-20dip"
                            android:layout_toEndOf="@+id/imvCurrentCondition"
                            android:text="@string/feels_like_main"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:id="@+id/windMill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txvClimateConditions"
                            android:layout_alignStart="@+id/txvClimateConditions"
                            android:layout_marginTop="0dip"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imvBlade"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:clickable="true"
                                android:contentDescription="@string/current_reading_icon"
                                android:src="@drawable/wl_windmill_blade" />

                            <ImageView
                                android:id="@+id/imvPole"
                                android:layout_width="20dip"
                                android:layout_height="15dip"
                                android:layout_marginTop="10dip"
                                android:contentDescription="@string/current_reading_icon"
                                android:src="@drawable/wl_windmill_pole" />

                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlForecast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlToday"
                        android:layout_marginBottom="0dp">

                        <LinearLayout
                            android:id="@+id/hourlyForecastGrid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/wl_double_border"
                            android:baselineAligned="false"
                            android:orientation="horizontal"
                            android:paddingTop="8dip"
                            android:paddingBottom="8dip"
                            android:visibility="visible"
                            android:weightSum="5">

                            <RelativeLayout
                                android:id="@+id/relFiveHourForecast"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txvHour1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_horizontal"
                                    android:text="@string/Hour1"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/imvHour1Icon"
                                    android:layout_width="46dip"
                                    android:layout_height="46dip"
                                    android:layout_below="@+id/txvHour1"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/weather_icon"
                                    android:src="@drawable/clear" />

                                <TextView
                                    android:id="@+id/txvHour1Temp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imvHour1Icon"
                                    android:gravity="center_horizontal"
                                    android:text="@string/no_reading_u"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txvHour2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_horizontal"
                                    android:text="@string/Hour2"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/imvHour2Icon"
                                    android:layout_width="46dip"
                                    android:layout_height="46dip"
                                    android:layout_below="@+id/txvHour2"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/weather_icon"
                                    android:src="@drawable/clear" />

                                <TextView
                                    android:id="@+id/txvHour2Temp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imvHour2Icon"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_horizontal"
                                    android:text="@string/no_reading_u"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txvHour3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_horizontal"
                                    android:text="@string/Hour3"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/imvHour3Icon"
                                    android:layout_width="46dip"
                                    android:layout_height="46dip"
                                    android:layout_below="@+id/txvHour3"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/weather_icon"
                                    android:src="@drawable/clear" />

                                <TextView
                                    android:id="@+id/txvHour3Temp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imvHour3Icon"
                                    android:gravity="center_horizontal"
                                    android:text="@string/no_reading_u"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txvHour4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_horizontal"
                                    android:text="@string/Hour4"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/imvHour4Icon"
                                    android:layout_width="46dip"
                                    android:layout_height="46dip"
                                    android:layout_below="@+id/txvHour4"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/weather_icon"
                                    android:src="@drawable/clear" />

                                <TextView
                                    android:id="@+id/txvHour4Temp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imvHour4Icon"
                                    android:gravity="center_horizontal"
                                    android:text="@string/no_reading_u"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/txvHour5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center_horizontal"
                                    android:text="@string/Hour5"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/imvHour5Icon"
                                    android:layout_width="46dip"
                                    android:layout_height="46dip"
                                    android:layout_below="@+id/txvHour5"
                                    android:layout_centerHorizontal="true"
                                    android:contentDescription="@string/weather_icon"
                                    android:src="@drawable/clear" />

                                <TextView
                                    android:id="@+id/txvHour5Temp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/imvHour5Icon"
                                    android:gravity="center_horizontal"
                                    android:text="@string/no_reading_u"
                                    android:textColor="#FFFFFF"
                                    android:textSize="14sp" />

                            </RelativeLayout>
                        </LinearLayout>

                        <ScrollView
                            android:id="@+id/svForecastScroll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/hourlyForecastGrid"
                            android:layout_marginTop="8dip">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/lstDayForecast"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:divider="#CBCBCB"
                                android:dividerHeight="0.5dip"
                                android:scrollbars="vertical" />
                        </ScrollView>
                    </RelativeLayout>
                </RelativeLayout>

            </android.support.v4.widget.SwipeRefreshLayout>

            <RelativeLayout
                android:id="@+id/rlWeatherFooter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="4dip"
                android:paddingStart="14dip"
                android:paddingEnd="14dip"
                android:background="@drawable/wl_top_shadow_border"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@+id/rlProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dip"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/imvWeatherProviderLogo"
                        android:layout_width="18dip"
                        android:layout_height="18dip"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="4dip"
                        android:src="@drawable/wl_yahoo_weather"
                        android:contentDescription="@string/weather_provider_logo" />

                    <TextView
                        android:id="@+id/txvWeatherProviderName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imvWeatherProviderLogo"
                        android:text="@string/current_weather_provider"
                        android:layout_centerVertical="true"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="normal" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/txvLastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/rlProvider"
                    android:text="@string/updated_place_holder"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


